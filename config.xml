<?xml version="1.0" encoding="UTF-8"?>

<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="com.qhsscrapbook" version="1.0" versionCode="1">

	<name>QHS Scrapbook</name>

	<description>A sample app for Up and Running with PhoneGap Build</description>


<author href="richpriordesign.com" 
email="rm.richmatthews@gmail.com">
Rich Prior
</author>
	<gap:platform name="ios" />
	<gap:platform name="android" />

	  <preference name="phonegap-version" value="cli-6.5.0" />


	<preference name="orientation" value="portrait" />
	<preference name="Fullscreen" value="true" />
	<preference name="AndroidLaunchMode" value="singleInstance" />
	<preference name="webviewbounce" value="false" />
	<preference name="DisallowOverscroll" value="true"/>
	<preference name="disallowOverscroll" value="true" />

	<preference name="exit-on-suspend" value="true" />

	<preference name="prerendered-icon" value="false" />

	<preference name="android-installLocation" value="auto" />

	<preference name="BackgroundColor" value="0xff000000 "/>

	<preference name="KeepRunning" value="false"/>


	<preference name="android-minSdkVersion" value="14" />

	<gap:plugin name="cordova-plugin-whitelist" source="npm"/>

	<plugin name="cordova-plugin-dialogs" />
	<plugin name="cordova-plugin-device" />

	<plugin name="cordova-plugin-console" />
	<plugin name="cordova-plugin-inappbrowser" />
	<preference name="android-build-tool" value="gradle" />
	<plugin name="cordova-plugin-statusbar" spec="2.2.2" />
    
    <plugin name=" https://github.com/wisemendevp/iosdevice.git" />
    <plugin name="https://github.com/Paldom/UniqueDeviceID.git"/> 

